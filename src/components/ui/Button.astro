---
interface Props {
  href?: string;
  variant?: "primary" | "secondary" | "outline";
  class?: string;
  type?: "button" | "submit" | "reset";
  [key: string]: any;
}

const {
  href,
  variant = "primary",
  class: className,
  type = "button",
  ...rest
} = Astro.props;

const variants = {
  primary: "bg-navy-900 text-white hover:bg-navy-800",
  secondary: "bg-stone-100 text-navy-900 hover:bg-stone-200",
  outline: "border-2 border-navy-900 text-navy-900 hover:bg-navy-50",
};

const baseClass =
  "inline-flex items-center justify-center px-6 py-3 text-base font-medium transition-all duration-300 ease-out rounded-sm focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-navy-900 disabled:opacity-50 disabled:cursor-not-allowed";
const variantClass = variants[variant];
---

{
  href ? (
    <a href={href} class:list={[baseClass, variantClass, className]} {...rest}>
      <slot />
    </a>
  ) : (
    <button
      type={type}
      class:list={[baseClass, variantClass, className]}
      {...rest}
    >
      <slot />
    </button>
  )
}
