---
import Container from '../ui/Container.astro';
import Button from '../ui/Button.astro';
import { Image } from 'astro:assets';
import houseImage from '../../assets/images/IMG_3254.jpg';

const properties = [
  {
    id: 1,
    title: 'Dom wolnostojący "Brzoza 2"',
    location: 'Bielsko-Biała',
    price: 'od 550 000 zł',
    size: '135 m²',
    plot: '700 m²',
    status: 'Stan deweloperski',
    image: houseImage,
    features: ['Pompa ciepła', 'Fotowoltaika', 'Garaż', 'Rekuperacja']
  }
];
---

<section id="domy" class="py-24 bg-stone-50">
  <Container>
    <!-- Header -->
    <div class="flex flex-col md:flex-row justify-between items-start md:items-center mb-12 gap-6">
      <div>
        <span class="inline-block px-4 py-2 bg-navy-900/10 text-navy-900 text-sm font-medium rounded-full mb-4">Domy na sprzedaż</span>
        <h2 class="font-heading font-bold text-3xl md:text-4xl text-navy-900">
          Znajdź swoje wymarzone miejsce
        </h2>
      </div>
      <a href="#kontakt" class="text-navy-900 hover:text-navy-700 font-medium flex items-center gap-2 group">
        Zapytaj o wszystkie inwestycje
        <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="2" stroke="currentColor" class="w-4 h-4 group-hover:translate-x-1 transition-transform">
          <path stroke-linecap="round" stroke-linejoin="round" d="M13.5 4.5 21 12m0 0-7.5 7.5M21 12H3" />
        </svg>
      </a>
    </div>

    <!-- Property Cards -->
    <div class="space-y-8">
      {properties.map(property => (
        <div class="bg-white rounded-3xl overflow-hidden shadow-lg hover:shadow-2xl transition-shadow duration-300 border border-stone-100">
          <div class="grid grid-cols-1 lg:grid-cols-2">
            <!-- Image -->
            <div class="relative h-72 lg:h-full min-h-[300px]">
              <Image 
                src={property.image} 
                alt={property.title}
                class="absolute inset-0 w-full h-full object-cover"
              />
              <div class="absolute top-4 left-4">
                <span class="px-4 py-2 bg-green-500 text-white text-sm font-bold rounded-full shadow-lg">
                  Na sprzedaż
                </span>
              </div>
            </div>

            <!-- Content -->
            <div class="p-8 lg:p-10 flex flex-col justify-center">
              <h3 class="font-heading font-bold text-2xl md:text-3xl text-navy-900 mb-2">
                {property.title}
              </h3>
              
              <p class="text-slate-500 mb-6 flex items-center gap-2">
                <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-5 h-5">
                  <path stroke-linecap="round" stroke-linejoin="round" d="M15 10.5a3 3 0 1 1-6 0 3 3 0 0 1 6 0Z" />
                  <path stroke-linecap="round" stroke-linejoin="round" d="M19.5 10.5c0 7.142-7.5 11.25-7.5 11.25S4.5 17.642 4.5 10.5a7.5 7.5 0 1 1 15 0Z" />
                </svg>
                {property.location}
              </p>

              <!-- Specs Grid -->
              <div class="grid grid-cols-3 gap-4 mb-6">
                <div class="bg-stone-50 p-4 rounded-xl text-center">
                  <span class="block text-xs text-slate-500 uppercase tracking-wide mb-1">Powierzchnia</span>
                  <span class="block font-bold text-lg text-navy-900">{property.size}</span>
                </div>
                <div class="bg-stone-50 p-4 rounded-xl text-center">
                  <span class="block text-xs text-slate-500 uppercase tracking-wide mb-1">Działka</span>
                  <span class="block font-bold text-lg text-navy-900">{property.plot}</span>
                </div>
                <div class="bg-stone-50 p-4 rounded-xl text-center">
                  <span class="block text-xs text-slate-500 uppercase tracking-wide mb-1">Status</span>
                  <span class="block font-bold text-sm text-navy-900">{property.status}</span>
                </div>
              </div>

              <!-- Price -->
              <div class="mb-6 pb-6 border-b border-stone-100">
                <span class="text-slate-500 text-sm">Cena</span>
                <p class="font-heading font-bold text-3xl text-navy-900">{property.price}</p>
              </div>

              <!-- Features -->
              <div class="flex flex-wrap gap-2 mb-8">
                {property.features.map(feat => (
                  <span class="px-3 py-1.5 bg-navy-900/5 text-navy-900 text-sm rounded-full">
                    {feat}
                  </span>
                ))}
              </div>

              <Button href="#kontakt" class="w-full md:w-auto justify-center">
                Zapytaj o szczegóły
              </Button>
            </div>
          </div>
        </div>
      ))}
    </div>
  </Container>
</section>
